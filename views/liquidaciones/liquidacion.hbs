<style>
    .scroll {
        max-height: 400px;
        overflow-y: auto;
    }
    .titulos{
        color: #002f5f;    
    }

    .tuit{
        color:#00b0ca;
    }

</style>

<div class="container p-1">
    
        <div class="row">    
            <div class="col-12 p-3">
                <h5 class="font-weight-bold titulos text-center"><i> CARTOLA</i></h5>
            </div>
        </div>

        <div class="card">
            <div class="card-header font-weight-bold titulos">
                Cuenta Corriente
            </div>
            <div class="card-body">
               <div class="row">            
                    <div class="col-4">
                                  
                            <select class="selectpicker" id="sl_ctacte" data-live-search="true" data-width="80%" data-size="5" >
                                <option value="init">-- Selecciona Cuenta Corriente --</option>
                                {{#each dataCtaCte}}
                                    <option data-tokens="{{codigo}}" value="{{codigo}}">{{codigo }} - {{nombrectacte}}</option>
                                {{/each}}
                            </select>
                                            
                    </div>
                    
                    <div class="col-4">
                        <select class="selectpicker show-tick" id="sl_periodo" data-live-search="true" data-width="fit" data-size="5">
                            <option selected="selected" value="init">-- Periodo actual --</option>
                        </select>      
                    </div>
                    <div class="col-1">
                        <div class="spinner-border" role="status" hidden="true" id="idLoad">
                          <span class="sr-only">Cargando...</span>
                        </div>
                    </div>
                    <div class="col-2">
                        <button type="button" title="Mostrar información de Cuenta Corriente" id="btnEnviar" class="btn btn-success btn-sm">Mostrar</button>
                    </div>
               </div>
                <hr>
               <div class="row" id="divOpcionSaldo" class="collapse" style="display:none">
                   <div class="col-3">
                       <b>Acumula saldo?</b>
                   </div>
                   <div class="col-2">
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" id="customRadioInline1" name="customRadioInline1" class="custom-control-input" value="1">
                            <label class="custom-control-label" for="customRadioInline1">Si</label>
                        </div>
                        <div class="custom-control custom-radio custom-control-inline">
                            <input type="radio" id="customRadioInline2" name="customRadioInline1" class="custom-control-input" value="0" checked>
                            <label class="custom-control-label" for="customRadioInline2">No</label>
                        </div>
                        
                   </div>
                   <div class="col-4">
                       <button type="button" title="Guardar opción" id="btnSaveConfig" class="btn btn-success btn-sm">Guardar opción</button>
                   </div>
               </div>
            </div>

        </div>
       
    <hr>
        <div class="card">
            <div class="card-header font-weight-bold titulos">
                Resumen 
            </div>
            <div class="card-body scroll">
               <div class="row">            
                <div class="col-12">                   
                    <div class="table-responsive-sm">
                        <table class="table table-hover table-striped table-sm">
                            <thead>
                                <tr>                            
                                    <th class="titulos" scope="col">#</th>        
                                    <th class="titulos" scope="col">Propiedad</th>                                    
                                    <th class="titulos" scope="col">Arrendatario</th>
                                    {{!-- <th class="titulos" scope="col">Ingresos</th>
                                    <th class="titulos" scope="col">Egresos</th> --}}
                                    <th class="titulos" scope="col">Saldo a Liquidar</th>
                                </tr>
                            </thead>
                            <tbody id="xResumen">
                                
                            </tbody>
                        </table>
                    </div>
                </div>
               </div>
            </div>
            <div class="card-footer">
                <div class="row" id="rs_footertotal">
                    
                </div>
            </div>
        </div>  

         <hr>

        <div class="card">
            <div class="card-header font-weight-bold titulos">
                Movimientos Generales
            </div>
            <div class="card-body scroll">
               <div class="row">
                   <div class="col-12">                   
                        <div class="table-responsive-sm">
                            <table class="table table-hover table-striped table-sm">
                                <thead>
                                    <tr>                            
                                        <th class="titulos" scope="col">#</th>        
                                        <th class="titulos" scope="col">Fecha</th>
                                        <th class="titulos" scope="col">Item</th>
                                        
                                        {{!-- <th class="titulos" scope="col">Ingresos</th>
                                        <th class="titulos" scope="col">Egresos</th> --}}
                                        <th class="titulos" scope="col">Saldo</th>                                    
                                    </tr>
                                </thead>
                                <tbody id="xResumenGB">
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>   
             <div class="card-footer">
                <div class="row" id="mg_footertotal">
                    
                </div>
            </div> 
        </div>
<hr>
        <div class="row">

            <div class="col-10 text-secondary" id="txtPorcentAsesoria"> </div>
            <div class="col-2" id="val_asesoria"></div>

        </div>

        <div class="row">
            
            <div class="col-10 text-secondary" id="txtPorcentComision"> </div>
            <div class="col-2" id="val_comis"></div>
            
        </div>
        <hr>
        <div class="row">            
                <div class="col-10"><b> Total Cartola</b></div>
                <div class="col-2" id="val_liq"></div>
        </div>
        <hr>
        <div class="row">    
            <div class="col-4 p-3">                
                <button id="btnGeneraLiq" class="btn btn-success" hidden="true">Generar Cartola</button>
            </div>
            <div class="col-1 p-3">
                <div class="spinner-border" role="status" hidden="true" id="idLoadGeneraLiq">
                    <span class="sr-only">Cargando...</span>
                </div>
            </div>
            <div class="col-4 p-3">
                <a href="" id="lnk_file" hidden="true" target="_blank" class="btn btn-info">Ver cartola</a>
            </div>
        </div>
        <hr>
        <div id="divSaldoAcum" class="font-weight-bold titulos">
                Saldos
            </div>
        
        <div class="row p-2">
            <div class="col-4">
                <div > Saldo Acumulado</div>
            </div>
            <div class="col-4 ">
                <div id="valAcum"></div>
            </div>
        </div>
         <div class="row p-2">
            <div class="col-4">
                <div > Saldo Acumulado en Contra</div>
            </div>
            <div class="col-4">
                <div  id="valEnContra"></div>
            </div>
        </div>
        
</div>



<script src="../javascripts/liq.js"></script>